<?xml version="1.0" encoding="utf-8"?>
<SQLConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <SQLList>
    <SQL SQLKey="Role.Insert" ConnectionKey="MySql">
      <Text>
        <![CDATA[
          insert into t_admin_role (name, memo, creator) value (@Name, @Memo, @Creator);
          ]]>
      </Text>
    </SQL>

    <SQL SQLKey="Role.Update" ConnectionKey="MySql">
      <Text>
        <![CDATA[
          update t_admin_role
          set name=@Name,
              memo=@Memo,
              updater=@Updater,
              update_time=current_timestamp()
          where id = @Id;
          ]]>
      </Text>
    </SQL>

    <SQL SQLKey="Role.Delete" ConnectionKey="MySql">
      <Text>
        <![CDATA[
          update t_admin_role
          set common_status=@CommonStatus
          where id = @Id;
          ]]>
      </Text>
    </SQL>

    <SQL SQLKey="Role.GetById" ConnectionKey="MySql">
      <Text>
        <![CDATA[
          select id            as Id,
                 name          as Name,
                 memo          as Memo,
                 common_status as CommonStatus,
                 creator       as Creator,
                 create_time   as CreateTime,
                 updater       as Updater,
                 update_time   as UpdateTime
          from t_admin_role
          where id = @Id
            and common_status = 1;
          ]]>
      </Text>
    </SQL>

    <SQL SQLKey="Role.SearchPageList" ConnectionKey="MySql">
      <Text>
        <![CDATA[
          select SQL_CALC_FOUND_ROWS id            as Id,
                 name          as Name,
                 memo          as Memo,
                 common_status as CommonStatus,
                 creator       as Creator,
                 create_time   as CreateTime,
                 updater       as Updater,
                 update_time   as UpdateTime
          from t_admin_role
          #STRWHERE#
          ORDER BY @SortFields
          LIMIT @StartNum,@PageSize;

          SELECT FOUND_ROWS();
          ]]>
      </Text>
    </SQL>
  </SQLList>
</SQLConfig>