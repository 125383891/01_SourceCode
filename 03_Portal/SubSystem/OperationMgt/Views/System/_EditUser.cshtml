@using LYY.AuthCenter.Entity
<div class="modal fade bs-example-modal-lg" id="addUserInfoModal" tabindex="-1" role="dialog"
     aria-labelledby="addUserInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" v-text="dialogTitle"></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-6 col-xs-12">
                        <div class="col-sm-4 control-label">
                            <label><span class="red">*</span>登录名：</label>
                        </div>
                        <div class="col-sm-7">
                            <input v-model.trim="user.LoginName" type="text" maxlength="50" class="form-control input-no-clear" />
                        </div>
                    </div>
                </div>
                <div class="row" v-if="user.BusinessId===null">
                    <div class="form-group col-md-6 col-xs-12">
                        <div class="col-sm-4 control-label">
                            <label><span class="red">*</span>密码：</label>
                        </div>
                        <div class="col-sm-7">
                            <input v-model.trim="user.LoginPassword" maxlength="50" type="password" class="form-control input-no-clear" />
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="form-group col-md-6 col-xs-12">
                        <div class="col-sm-4 control-label">
                            <label>姓名：</label>
                        </div>
                        <div class="col-sm-7">
                            <input v-model.trim="user.UserFullName" type="text" maxlength="40" class="form-control input-no-clear" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 col-xs-12">
                        <div class="col-sm-4 control-label">
                            <label>状态：</label>
                        </div>
                        <div class="col-sm-7">
                            <label class="radio-inline">
                                <input type="radio" name="radioAddStatus" class="colored-blue" value="@((int)CommonStatus.Actived)" style="margin-top:11px" v-model="user.CommonStatus" />
                                启用
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="radioAddStatus" class="colored-blue" value="@((int)CommonStatus.DeActived)" style="margin-top:11px" v-model="user.CommonStatus" />
                                禁用
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 col-xs-12">
                        <div class="col-sm-4 control-label">
                            <label>所属角色：</label>
                        </div>
                        <div class="col-sm-7">
                            <select class="form-control select-fix100" v-model="user.RoleId">
                                <option v-for="item in roleList" :value="item.Id">
                                    {{item.Name}}
                                </option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" v-on:click="save">确认</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            </div>
        </div>
    </div>
</div>