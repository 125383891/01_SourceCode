@using LYY.AuthCenter.Entity
<div class="modal fade bs-example-modal-lg" id="rolePermissionListModal" tabindex="-1" role="dialog"
     aria-labelledby="rolePermissionListModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" v-text="dialogTitle"></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-6 col-xs-12">
                        <div class="col-sm-4 control-label">
                            <label><span class="red">*</span>角色名称：</label>
                        </div>
                        <div class="col-sm-7">
                            <input v-model.trim="role.Name" type="text" maxlength="50" class="form-control input-no-clear" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 col-xs-12">
                        <div class="col-sm-4 control-label">
                            <label>角色描述：</label>
                        </div>
                        <div class="col-sm-7">
                            <textarea class="form-control" maxlength="2000" v-model="role.Memo" rows="6" id="form-field-8" placeholder="角色描述"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" v-on:click="save">确认</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            </div>
        </div>
    </div>
</div>